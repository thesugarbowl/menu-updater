<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item Selection</title>

    <!--Bootstrap styling-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <!--CSS-->
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div class='container-fluid' id='update-page'>
    <h1 id="update-title" style="margin-top: 25px;"><%= title %></h1>
    <br>
    <div class="updateText" style='margin-bottom: 15px;'>
    <p class='lead left-align'><b>Use this form to:</b></p>
    <ol>
      <li><p>Update Item Availability</p></li>
      <li><p>Create/Update Featured Items (Beer/Brunch/Lunch/Dinner/Dessert), Soup, and Cheesecake</p></li>
    </ol>
    <p class='lead left-align'><b>Complete the steps to choose your item.</b></p>
    </div>
    <br>

    <script>
      // default display
      function buildSubcat() {
          // selected category
          var category = d3.select('#category').property('value');
          // dropdown of subcategories
          var selectorSubcat = d3.select('#subcategory');

          var subcatBev_list = ['--Select--', 'Beer/Cider', 'Rotating Feature Beers', 'Wine', 'Spirits', 'Cocktails', 'Specialty Coffees', 'Coffee & Non-Alcoholic'];
          var subcatFood_list = ['--Select--', 'Breakfast', 'Lunch & Dinner', 'Desserts'];

          if (category=='Beverages') {
            selectorSubcat.html('');
            subcatBev_list.forEach((subcat) => {
                selectorSubcat
                    .append("option")
                    .text(subcat)
                    .property('value', subcat);
            });
          }
          if (category=='Food') {
            selectorSubcat.html('');
            subcatFood_list.forEach((subcat) => {
                selectorSubcat
                    .append("option")
                    .text(subcat)
                    .property('value', subcat);
            });
          }
      };

      function buildName() {
        // selected category
        var subcategory = d3.select('#subcategory').property('value');
        // dropdown of subcategories
        var selectorName = d3.select('#name');

        var nameBeerCider_list = ['Alleykat Aprikat Apricot Ale', 'Analog Hive Bomber Honey Wheat', 'Annex Ale Project Good Authority Golden Ale', //
        'Apex Predator Double IPA', 'Blindman Triphammer Porter', 'Brauerei Fahr AB Hefeweizen', 'Brauerei Fahr AB Copper', //
        'Collective Arts Apple-Cherry Cider', 'Collective Arts Apple Cider', 'Revel Cider Prosthetic Conscience', 'Revel Sonata Cherry Cider', //
        'Sourwood Wabamo Dry Hopped Cider', 'Sourwood Plumbum', 'Sourwood Semitone', 'DDC Aphrodisiaque Strong Stout', //
        'Mongozo GF Pilsner', 'New Level Berserker Blonde', 'Sea Change Prairie Fairy Blackberry Wheat', //
        'The Dandy Brewing Company T2G IPA', 'Townsquare Forged Amber Rye Ale', 'Achel Blond', 'Chimay Red', //
        'Chimay White', 'Chimay Blue', 'Dupont Avec Les Bons Voeux', 'Gouden Carolus Classic', 'Kwak', //
        'La Guillotine', 'Lindemans Oude Gueuze Cuvée René Lambic', 'Orval Trappist Ale', 'Rochefort 6', 'Rochefort 8', 'Westmalle Dubbel', //
        'Westmalle Tripel'];

        var nameFeatureDraft_list = ['Feature Draft #1', 'Feature Draft #2', 'Feature Draft #3', 'Feature Draft #4', //
        'Feature Draft #5', 'Feature Draft #6', 'Feature Draft #7', 'Feature Draft #8', 'Feature Draft #9', 'Feature Draft #10', 'Feature Bottle/Can #1', 'Feature Bottle/Can #2', 'Feature Bottle/Can #3', 'Feature Bottle/Can #4', //
        'Feature Bottle/Can #5', 'Feature Bottle/Can #6', 'Feature Bottle/Can #7', 'Feature Bottle/Can #8', 'Feature Bottle/Can #9', 'Feature Bottle/Can #10'];

        var nameWine_list = ["Clos du Soleil Célestiale . Meritage '16", "Clos du Soleil Capella . White Meritage '18", //
        "Lapis Luna . Zinfandel '19", "Lapis Luna . Chardonnay '18", "Wild Goose . Gewürtztraminer '18", //
        "Rosewood . Night Moves . Gamay '17", "Laughing Stock . Portfolio Red '18", "Pearl Morissette Cuvée Sputnik . Riesling '17", //
        "Mionetto Prosecco DOC Treviso Brut", "Frico Lambrusco Sparkling Red", "Benjamin Bridge Pétillant Naturel Sparkling", //
        "Richvale Pool Party Rosé"];

        var nameSpirits_list = ["Vodka: Grey Goose", "Vodka: CIROC", "Gin: Tempo", "Gin: Ophir", "Gin: Long Table Cucumber", //
        "Tequila: Arette Blanco", "Tequila: Espolòn Reposado", "Tequila: Mezcal Pelotón", "Whisky: Glendalough Irish", //
        "Whiskey: Forty Creek Copper Pot", "Whiskey: Nikka Coffee Still Malt (Japan)", "Whiskey: Lot 40 Rye", //
        "Scotch: Adelphi Private Stock Blend", "Scotch: Glengoyne 12", "Scotch: Caol Ila 12", "Scotch: Laphroaig Select", //
        "Scotch: Glenrothes 12", "Bourbon: 1792", "Bourbon: Buffalo Trace", "Bourbon: Bulleit", "Bourbon: Knob Creek", //
        "Bourbon: Four Roses", "Bourbon: Old Grand Dad", "Bourbon: Sazerac", "Rum: El Dorado 3 yr", "Rum: El Dorado 12 yr", //
        "Rum: Blackpool Spiced"];

        var nameCocktails_list = ["Boulevardier", "Grandmother's Purse", "Horse With No Mane", "Penicillin", //
