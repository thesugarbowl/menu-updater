        "Fancy Tonic"];

        if (subcategory=='Beer/Cider') {
            selectorName.html('');
            nameBeerCider_list.forEach((name) => {
                selectorName
                    .append("option")
                    .text(name)
                    .property('value', name);
            });
        }
        if (subcategory=='Rotating Feature Beers') {
            selectorName.html('');
            nameFeatureDraft_list.forEach((name) => {
                selectorName
                    .append("option")
                    .text(name)
                    .property('value', name);
            });
        }
        if (subcategory=='Wine') {
            selectorName.html('');
            nameWine_list.forEach((name) => {
