    <form method='POST' action=''>
        <div class='form-group'>
            <label for='category'><h5>Category</h5></label>
            <select class='form-control' id='category' name='category'>
              <option value='Beverages' selected>Beverages</option>
            </select>
          </div>
        <div class='form-group'>
            <label for='subcategory'><h5>Step 1: Subcategory</h5></label>
            <select class='form-control' id='subcategory' name='subcategory' onchange='buildName(this.value)'>
              <option value='' selected>--Select--</option>
              <option value='Beer/Cider'>Beer/Cider</option>
              <option value='Rotating Feature Beers'>Rotating Feature Beers</option>
              <option value='Wine'>Wine</option>
              <option value='Spirits'>Spirits</option>
              <option value='Cocktails'>Cocktails</option>
              <option value='Specialty Coffees'>Specialty Coffees</option>
              <option value='Coffee & Non-Alcoholic'>Coffee & Non-Alcoholic</option>
            </select>
        </div>
        <div class="form-group" style='margin-bottom: 20px;'>
          <label for="name"><h5>Step 2: Item Name</h5><p><i> 
            <ul>
              <li>Click the field to see the list.</li>
              <li>Rotating Feature Beers are numbered 1-8 from top-to-bottom of the chalkboard.</li>
            </ul>
          </i></p></label>
          <select class="form-control" id="name" name="name" required='true'></select>
        </div>
        <div class='form-group' style='text-align: center'>
        <button class='btn btn-primary' id='btn_submit' type='submit' style="width:100px;">Submit</button>
        </div>
