        var nameSpecialtyCoffees_list = ["B52", "After 8", "Monte Cristo", "Spanish", "Irish", "Tiramisu"];

        var nameCoffeeNonalcoholic_list = ["House-Made Chai Latte", "Hot Chocolate", "London Fog", "Cold Brew", "Pop: Coca-Cola", "Pop: Diet Coke", //
        "Pop: Sprite", "Pop: Ice Tea", "Pop: Ginger Ale", "S.Pellegrino: Blood Orange", "S.Pellegrino: Clementine", //
        "S.Pellegrino: Lemon", "S.Pellegrino: Pomegranate-Orange", "S.Pellegrino Sparkling Mineral Water: 250 mL", //
        "S.Pellegrino Sparkling Mineral Water: 750 mL", "Annex: Root Beer", "Annex: Saskatoon Lemonade", //
        "New Level Painapple Punch Craft Soda", "Royal Jamaican Ginger Beer", "Stiegl Freibier Non-Alcoholic", //
        "Fancy Tonic"];

        var nameBreakfast_list = ['The Sugar Griddle', 'Chicken Waffle Sandwich', 'Brunch Feature', 'Breakfast Sandwich', 'Burrito', 'Chicken And Waffles', 'Cinnamon Bun', //
        'French Toast', 'Huevos Rancheros', 'Omelette', 'Sugarbowl Benny', 'Vegan Sausage Tofu Scramble'];
        var nameLunchDinner_list = ['The Sugar Griddle', 'Chicken Waffle Sandwich', 'Chicken Salad Sandwich', 'The Heady Vegetarian Sandwich', 'Lunch Feature #1', 'Lunch Feature #2', 'Dinner Feature #1', 'Dinner Feature #2', 'Almond Spread With Pita Bread', 'Beef Burger', 'Bison Chili', //
        'Caesar Salad', 'Chicken And Waffles', 'Chicken Curry Stew', 'Jerk Chicken Sandwich', 'Lamb Burger', "Mac' And Cheese", //
        'Pommes Frites', 'Pulled Pork Sandwich', 'Smoked Paprika Popcorn', 'Soup Of The Day', 'Veggie Burger', //
        'Yam Fries'];
        var nameDesserts_list = ['Dessert Feature', 'Banana Cream Pie', 'Cheesecake Of The Day', 'Cinnamon Bun'];

        if (subcategory=='Beer/Cider') {
            selectorName.html('');
            nameBeerCider_list.forEach((name) => {
                selectorName
                    .append("option")
                    .text(name)
                    .property('value', name);
            });
        }
        if (subcategory=='Rotating Feature Beers') {
            selectorName.html('');
            nameFeatureDraft_list.forEach((name) => {
                selectorName
                    .append("option")
                    .text(name)
                    .property('value', name);
            });
        }
        if (subcategory=='Wine') {
            selectorName.html('');
            nameWine_list.forEach((name) => {
                selectorName
                    .append("option")
                    .text(name)
                    .property('value', name);
            });
        }
        if (subcategory=='Spirits') {
            selectorName.html('');
            nameSpirits_list.forEach((name) => {
                selectorName
                    .append("option")
                    .text(name)
                    .property('value', name);
            });
        }
        if (subcategory=='Cocktails') {
            selectorName.html('');
            nameCocktails_list.forEach((name) => {
                selectorName
                    .append("option")
                    .text(name)
                    .property('value', name);
            });
        }
        if (subcategory=='Specialty Coffees') {
            selectorName.html('');
            nameSpecialtyCoffees_list.forEach((name) => {
                selectorName
                    .append("option")
                    .text(name)
