            selectorName.html('');
            nameCoffeeNonalcoholic_list.forEach((name) => {
                selectorName
                    .append("option")
                    .text(name)
                    .property('value', name);
            });
        }
        if (subcategory=='Breakfast') {
            selectorName.html('');
            nameBreakfast_list.forEach((name) => {
                selectorName
                    .append("option")
                    .text(name)
                    .property('value', name);
            });
          }
        if (subcategory=='Lunch & Dinner') {
          selectorName.html('');
          nameLunchDinner_list.forEach((name) => {
              selectorName
                  .append("option")
                  .text(name)
                  .property('value', name);
          });
        }
        if (subcategory=='Desserts') {
            selectorName.html('');
            nameDesserts_list.forEach((name) => {
                selectorName
                    .append("option")
                    .text(name)
                    .property('value', name);
            });
          }
      };
    </script>

    <form method='POST' action=''>
        <div class='form-group'>
            <label for='category'><h5>Step 1: Category</h5></label>
            <select class='form-control' id='category' name='category' onchange='buildSubcat(this.value)'>
              <option value=''>--Select--</option>
              <option value='Beverages'>Beverages</option>
              <option value='Food'>Food</option>
            </select>
          </div>
        <div class='form-group'>
            <label for='subcategory'><h5>Step 2: Subcategory</h5></label>
            <select class='form-control' id='subcategory' name='subcategory' onchange='buildName(this.value)'></select>
        </div>
        <div class="form-group" style='margin-bottom: 20px;'>
          <label for="name"><h5>Step 3: Item Name</h5><p><i> 
            <ul>
              <li>Click the field to see the list.</li>
              <li>Rotating Feature Beers are numbered 1-8 from top-to-bottom of the chalkboard.</li>
            </ul>
          </i></p></label>
          <select class="form-control" id="name" name="name" required='true'></select>
        </div>
        <div class='form-group' style='text-align: center; margin-bottom: 10px;'>
        <button class='btn btn-primary' id='btn_submit' type='submit'>Submit</button>
        </div>
      </form>
      <hr>
      <br>
      <h5 style="margin-bottom:10px;">To make <b>Breakfast & Brunch Unavailable</b></h5>
      <a id="update-menu-button" class='btn btn-danger' href='/menu/gravlaxisnotalaxative/breakfastunavailable' role='button'>Click Here</a>
      <div style="margin-bottom: 40px;"></div>
      <h5 style="margin-bottom:10px;">To make <b>All Food Items Available</b></h4>
      <a id="update-menu-button" class='btn btn-success inlineButton' href='/menu/gravlaxisnotalaxative/allavailable' role='button'>Click Here</a>
      <div style="margin-bottom: 65px;"></div>
    </div>
    <!--d3 js-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/5.5.0/d3.js"></script>
